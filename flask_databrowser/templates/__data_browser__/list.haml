-extends "layout.html"

-block body

  %table.bordertable
    %thead
      %tr
        -if __actions__
          %th -> %input type="checkbox" name="rowtoggle"
        -for c in __list_columns__
          %th title={% if c.doc %} {{c.doc}} {% endif %}
            {{ c.label }}
    %tbody
      -for row in __data__
        %tr
        -if __actions__
          %td -> %input type="checkbox" value="{{ row.pk }}"
        -for v in row.fields:
          %td -> {{ v }}
          
         
